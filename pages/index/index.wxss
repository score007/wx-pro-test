swiper{
  width: 100%;
  height: 340rpx;
}

swiper image{
  display: block;
  width: 100%;
  height: 100%;
}
.main{
  width: 100%;
}

.content{
  position: relative;
  padding: 10rpx;
  overflow: hidden;
}

.content-img{
  float: left;
  width: 290rpx;
  height: 290rpx;
}

.content-title{
  line-height: 1.5;
  font-size: 40rpx;
  text-indent:12rpx;
}

.content-text{
  font-size: 20rpx;
  color: grey;
}

.content-footer{
  overflow: hidden;
  height: 62rpx;
  border-radius: none;
}
.btn-1{
  margin: 10rpx 5rpx 0 5rpx;
  font-size: 30rpx;
  font-weight: 1;
  padding: 0;
  float: left;
  width: 170rpx;
  height: 52rpx;
  line-height: 52rpx;
}
.btn-1:not([size='mini']){
  width: 170rpx;
  min-height: 52rpx;
}

.btn-2{
  line-height: 52rpx;
  margin: 10rpx 5rpx 0 5rpx;
  background-color: #1296db;
  color: white;
  font-size: 30rpx;
  font-weight: 1;
  padding: 0;
  float: left;
  width: 224rpx;
  height: 52rpx;
}
.btn-2:active{
  color: yellow;
  background-color: blue;
}

.btn-2:not([size='mini']){
  width: 224rpx;
  min-height: 52rpx;
}